<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.Login_Page">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/mix_color_background"
      >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:layout_gravity="center_vertical"
          tools:ignore="ScrollViewSize">

          <TextView
              android:id="@+id/tvWelcomeBack"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:gravity="center"
              android:textStyle="bold"
              android:text="Chào mừng lại"
              android:textColor="#000000"
              android:textSize="34sp"
              tools:ignore="HardcodedText,ObsoleteLayoutParam" />

          <TextView
              android:id="@+id/tvPrompt"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="40dp"
              android:gravity="center"
              android:text="Xin hãy đăng nhập vào tài khoản của bạn"
              android:textAlignment="center"
              android:textColor="#000000"
              android:textSize="16sp"
              tools:ignore="HardcodedText" />

          <!--email-->
          <EditText
              android:id="@+id/id_Email"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_alignParentEnd="true"
              android:layout_marginStart="42dp"
              android:layout_marginTop="20dp"
              android:layout_marginEnd="42dp"
              android:background="@drawable/style_border_radius"
              android:hint="Email"
              android:padding="12dp"
              android:textColor="#000000"
              android:textSize="14sp"
              tools:ignore="Autofill,HardcodedText,ObsoleteLayoutParam,TextFields" />

          <!--password-->
          <EditText
              android:id="@+id/id_password"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_alignParentEnd="true"
              android:layout_marginStart="42dp"
              android:layout_marginTop="5dp"
              android:layout_marginEnd="42dp"
              android:background="@drawable/style_border_radius"
              android:hint="Mật khẩu"
              android:padding="12dp"
              android:textColor="#000000"
              android:textSize="14sp"
              android:inputType="textPassword"
              tools:ignore="Autofill,HardcodedText,ObsoleteLayoutParam,TextFields" />

          <!--forget password and save password-->
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <CheckBox
                  android:id="@+id/id_CheckBoxRemember"
                  android:layout_width="143dp"
                  android:layout_height="wrap_content"
                  android:layout_alignParentStart="true"
                  android:layout_marginStart="42dp"
                  android:text="Nhớ tôi"
                  android:textColor="#000000"
                  android:textSize="14sp"
                  tools:ignore="HardcodedText,ObsoleteLayoutParam" />

              <!--add a bit space-->
              <View
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="10dp"/>

              <TextView
                  android:id="@+id/id_forget_password_TextView"
                  android:layout_marginRight="42dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textStyle="bold"
                  android:text="Quên mật khẩu"
                  android:textColor="#000000"
                  android:textSize="16sp"
                  tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlHardcoded" />
          </LinearLayout>

          <!--btn login-->
          <Button
              android:id="@+id/id_btn_login"
              android:layout_marginTop="20dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_alignParentEnd="true"
              android:layout_marginStart="42dp"
              android:layout_marginEnd="42dp"
              android:backgroundTint="@color/blue_3"
              android:gravity="center"
              android:text="Đăng nhập"
              android:textColor="#000000"
              tools:ignore="HardcodedText,ObsoleteLayoutParam" />

          <!--text register-->
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_marginStart="42dp"
              android:layout_marginEnd="42dp"
              android:gravity="center_horizontal"
              android:orientation="horizontal">

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Bạn chưa có tài khoản?"
                  android:textAlignment="center"
                  android:textColor="#000000"
                  android:textSize="14sp"
                  tools:ignore="HardcodedText,ObsoleteLayoutParam" />

              <!--add a bit space-->
              <View
                  android:layout_width="20dp"
                  android:layout_height="wrap_content"/>

              <TextView
                  android:id="@+id/id_text_register"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Đăng ký"
                  android:textColor="@color/blue_2"
                  android:textSize="14sp"
                  tools:ignore="HardcodedText" />
          </LinearLayout>
      </LinearLayout>
  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>